extends layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4.col-xs-6.col-xs-offset-3
        .dl-horizontal
          dt 姓名:
          dd= user.name
          dt 部门:
          dd= user.deparment
          dt 工号:
          dd= user.employeeID
          dt 门牌:
          dd= user.housenumber
          dt 电话:
          dd= user.phonenumber
          dt 注册时间:
          dd= moment(user.meta.createAt).format('YYYY-MM-DD HH:mm:ss')
          dt 主机固定资产号:
          dd= user.ip
          dt 主机MAC:
          dd= user.mac
          
