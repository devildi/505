extends layout

block content
  .container
    .row
      .panel.panel-info
        .panel-heading 电话处理故障记录
        table.table.table-hover.table-bordered
          thead
            tr
              th 时间
              th 电话
              th 问题描述
              th 处理过程
              th 维修人
          tbody
            each item in telorders
              tr(class="item-id-#{item._id}")
                td #{moment(item.meta.createAt).format('YYYY-MM-DD HH:mm:ss')}
                td #{item.telnumber}
                td #{item.request}
                td #{item.response}
                td #{item.serviceguy}
      ul.pagination
        - for (var i = 0; i < totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href='/telorderShow?p=#{i}') #{i + 1}
          - }
        - }